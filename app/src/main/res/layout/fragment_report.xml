<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#005585"
    tools:context=".ReportFragment">

    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawer_layout_card">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Bottom FrameLayout -->
    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/bottom_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/bottom_navigation"
            android:layout_gravity="center" />

        <!-- TextView container -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <!-- TextView 1 -->
            <LinearLayout
                android:id="@+id/nav_assessment"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/nav_card">

                <TextView
                    android:id="@+id/text_assessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Assessment"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>


            <!-- TextView 2 -->
            <LinearLayout
                android:id="@+id/nav_exercise"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="22.5dp"
                android:background="@drawable/nav_card">

                <TextView
                    android:id="@+id/text_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Exercise"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:padding="4dp" />
            </LinearLayout>


            <!-- TextView 3 -->
            <LinearLayout
                android:id="@+id/nav_muscle_strength"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="22.5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/nav_card"
                android:paddingVertical="1dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/text_muscle_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Muscle\nStrength"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>


            <!-- TextView 4 -->
            <LinearLayout
                android:id="@+id/nav_summary"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/nav_card">

                <TextView
                    android:id="@+id/text_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Summary"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:padding="4dp" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />
    </FrameLayout>



</LinearLayout>
